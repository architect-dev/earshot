rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isEmailVerified() {
      return isAuthenticated() && (request.auth.token.email_verified == true);
    }

    function isConversationParticipant(conversationId) {
      return request.auth.uid in
        get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
    }
    
    // Check if two users are friends
    function areFriends(userId1, userId2) {
      return exists(/databases/$(database)/documents/friendships/$(userId1 + '_' + userId2)) ||
             exists(/databases/$(database)/documents/friendships/$(userId2 + '_' + userId1));
    }
    
    // Check if user is blocked
    function isBlocked(blockerId, blockedId) {
      return exists(/databases/$(database)/documents/blocks/$(blockerId + '_' + blockedId));
    }
    
    // Users collection
    match /users/{userId} {
      // Anyone authenticated can read basic profile info (for friend search)
      allow read: if isAuthenticated() && isEmailVerified();
      
      // Only the owner can create/update their profile
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      
      // Only the owner can delete their profile
      allow delete: if isOwner(userId);
    }
    
    // Posts collection
    match /posts/{postId} {
      // Users can read posts from friends only
      allow read: if isAuthenticated() && 
                    isEmailVerified() && 
                    (isOwner(resource.data.authorId) || areFriends(request.auth.uid, resource.data.authorId));
      
      // Users can create their own posts
      allow create: if isAuthenticated() && 
                      isEmailVerified() && 
                      isOwner(request.resource.data.authorId);
      
      // Users can update their own posts
      allow update: if isAuthenticated() && 
                      isEmailVerified() && 
                      isOwner(resource.data.authorId);
      
      // Users can delete their own posts
      allow delete: if isAuthenticated() && 
                      isEmailVerified() && 
                      isOwner(resource.data.authorId);
    }
    
    // Friendships collection
    match /friendships/{friendshipId} {
      // Participants can read the friendship
      allow read: if isAuthenticated() && 
                    isEmailVerified() && 
                    (request.auth.uid == resource.data.requesterId || 
                     request.auth.uid == resource.data.addresseeId);
      
      // Authenticated users can create friend requests
      allow create: if isAuthenticated() && 
                      isEmailVerified() && 
                      request.auth.uid == request.resource.data.requesterId &&
                      !isBlocked(request.resource.data.addresseeId, request.auth.uid);
      
      // Participants can update (accept/decline)
      allow update: if isAuthenticated() && 
                      isEmailVerified() && 
                      (request.auth.uid == resource.data.requesterId || 
                       request.auth.uid == resource.data.addresseeId);
      
      // Participants can delete friendships
      allow delete: if isAuthenticated() && 
                      isEmailVerified() && 
                      (request.auth.uid == resource.data.requesterId || 
                       request.auth.uid == resource.data.addresseeId);
    }
    
    // Conversations collection
    match /conversations/{conversationId} {
      // Only participants can read/write
      allow read: if isAuthenticated() &&
                    isEmailVerified() &&
                    request.auth.uid in resource.data.participants;

      allow create: if isAuthenticated() &&
                      isEmailVerified() &&
                      request.auth.uid in request.resource.data.participants;

      allow update: if isAuthenticated() &&
                      isEmailVerified() &&
                      request.auth.uid in resource.data.participants;

      // Messages subcollection
      match /messages/{messageId} {

        // Only participants can read messages
        allow read: if isAuthenticated() &&
                      isEmailVerified() &&
                      isConversationParticipant(conversationId);

        allow create: if isAuthenticated() && isEmailVerified() &&
                        isConversationParticipant(conversationId) &&
                        request.auth.uid == request.resource.data.senderId;

        // Sender can update anything; non-senders can ONLY update readBy (and must add themselves)
        allow update: if isAuthenticated() &&
                        isEmailVerified() &&
                        isConversationParticipant(conversationId) &&
                        (
                          // Sender can update any fields (delete/edit/etc.)
                          request.auth.uid == resource.data.senderId ||

                          // Non-senders: only readBy can change, and it can only grow, adding caller
                          (
                            request.auth.uid != resource.data.senderId &&
                            request.resource.data.diff(resource.data).changedKeys().hasOnly(['readBy']) &&
                            request.resource.data.readBy is list &&
                            (
                              // allow missing readBy on existing docs, treat as empty
                              resource.data.readBy == null ||
                              request.resource.data.readBy.hasAll(resource.data.readBy)
                            ) &&
                            request.resource.data.readBy.hasAny([request.auth.uid])
                          )
                        );
      }
    }
    
    // Blocks collection
    match /blocks/{blockId} {
      // Only the blocker can read/write blocks
      allow read: if isAuthenticated() && 
                    isEmailVerified() && 
                    request.auth.uid == resource.data.blockerId;
      
      allow create: if isAuthenticated() && 
                      isEmailVerified() && 
                      request.auth.uid == request.resource.data.blockerId;
      
      allow delete: if isAuthenticated() && 
                      isEmailVerified() && 
                      request.auth.uid == resource.data.blockerId;
    }
    
    // Feeds collection (fan-out feed items)
    // Structure: feeds/{viewerUid}/items/{postId}
    match /feeds/{viewerUid}/items/{postId} {
      // Only the owner can read their feed items
      allow read: if isAuthenticated() && 
                    isEmailVerified() && 
                    request.auth.uid == viewerUid;
      
      // Deny all client writes - only Cloud Functions can write
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}

